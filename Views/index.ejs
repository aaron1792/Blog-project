<html lang="en" data-bs-theme="dark">
  <%- include("partials/header.ejs") %>
  <body>
    
   



<main class="container">
  <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
      <% if(locals.posts && locals.posts.length > 0){%>
        
      <h1 class="display-4 fst-italic"><%= posts[0].title %></h1>
      <p class="lead my-3"><%= posts[0].content.length > 100 ? posts[0].content.substring(0, 100) + '...' : posts[0].content %></p>
      <p class="lead mb-0"><a href="/post" class="text-body-emphasis fw-bold">Continue reading...</a></p>
      <% } else{ %>
        <h1  class="display-5 link-body-emphasis mb-1">No Posts Available.</h1>
        <%}%>
    </div>
  </div>

  <div class="row mb-2">
    <% if(locals.posts && locals.posts.length > 0){%>
        <% locals.posts.forEach(post => { %>

    <div class="col-md-6">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary-emphasis">World</strong>
          <h3 class="mb-0"><%= post.title %></h3>
          <div class="mb-1 text-body-secondary"><%= post.date.toDateString() %></div>
          <p class="card-text mb-auto"><%= post.content.length > 100 ? post.content.substring(0, 100) + '...' : post.content %></p>
          <a href="/post" class="icon-link gap-1 icon-link-hover stretched-link">
            Continue reading
            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <img  src="images/declan-sun-Ko2IWuJS2tI-unsplash.jpg" width="200" height="250">
          
        </div>
      </div>
    </div>
    <% })} else{ %>
        <h3  class="display-5 link-body-emphasis mb-1">No Posts Available.</h3>
        <%}%>
   
  </div>

  

  <%- include("posts.ejs") %>

</main>
<%- include("partials/footer.ejs") %>


</body></html>